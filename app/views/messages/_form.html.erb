
<%= simple_form_for(@message) do |f| %>
  <%= f.error_notification %>
  <div class="field">
    <div class="control">
      <%= f.input :message, label: "What is on your mind?", input_html: { class: "textarea" }, wrapper: false, label_html: { class: "label"}, placeholder: "Compose a new secret...", autofocus: true %>
    </div>
  </div>
  <%= f.button :submit, class: "button is-info" %>
<% end %>
